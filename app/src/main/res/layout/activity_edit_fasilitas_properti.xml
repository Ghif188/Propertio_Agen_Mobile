<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editproject.EditFasilitasProperti"
    android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Properti"
        android:textSize="25dp"
        android:padding="15dp"
        android:fontFamily="@font/poppins_semibold"
        />
    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:indeterminate="false"
        android:progress="87" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Membuat Properti"
                android:textSize="20dp"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_black"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">
                <TextView
                    android:id="@+id/teks_foto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fasilitas"
                    android:textSize="17dp"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_semibold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hapus Semua"
                    android:textSize="17dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentEnd="true"
                    android:textColor="@color/red"
                    android:fontFamily="@font/poppins_reguler"/>
            </RelativeLayout>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_grey"
                android:drawableStart="@drawable/ic_search"
                android:padding="15dp"
                android:hint="Cari Properti"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_reguler"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginVertical="15dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn_filter"
                    android:text="Fasilitas"
                    android:textAllCaps="false"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins_reguler"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn_filter"
                    android:text="Keunggulan"
                    android:textAllCaps="false"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins_reguler"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_filter"
                    android:text="Perabot"
                    android:textAllCaps="false"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins_reguler"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvFasilitas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guide_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.35"
                    android:orientation="vertical"/>
                <ImageButton
                    android:id="@+id/btn_back"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_back"
                    android:background="@drawable/bg_btn_grey"
                    android:padding="15dp"
                    android:layout_marginRight="40dp"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_next"
                    app:layout_constraintStart_toEndOf="@id/guide_btn"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_btn_blue"
                    android:text="Lihat Pratinjau"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_semibold"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>