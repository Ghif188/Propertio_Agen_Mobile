<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProyekFragment"
    android:orientation="vertical"
    android:paddingTop="25dp">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="25dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Properti Saya"
                android:textSize="25dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="@font/poppins_semibold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_black"
                android:text="Properti"
                android:textSize="20dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Monitor Properti Anda Disini"
                android:fontFamily="@font/poppins_reguler"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                app:cardCornerRadius="10dp"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="25dp"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginRight="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingin kami buatkan iklan properti anda ?"
                            android:textColor="@color/blue"
                            android:fontFamily="@font/poppins_reguler"
                            android:layout_marginBottom="10dp"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="35dp"
                            android:background="@drawable/bg_btn_blue"
                            android:text="Hubungi Kami"
                            android:textAllCaps="false"
                            android:padding="7dp"
                            android:fontFamily="@font/poppins_reguler"
                            android:textColor="@color/white" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@drawable/img_dash_property"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_grey"
                android:layout_marginTop="20dp"
                android:drawableStart="@drawable/ic_search"
                android:padding="15dp"
                android:hint="Cari Properti"
                android:drawablePadding="10dp"
                android:fontFamily="@font/poppins_reguler"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_marginVertical="15dp">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/aktif_filter"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn_filter"
                    android:text="Aktif"
                    android:textColor="@color/btn_filter"
                    android:textAllCaps="false"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins_reguler"
                    android:enabled="false"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/draft_filter"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_btn_filter"
                    android:text="Draft"
                    android:textColor="@color/btn_filter"
                    android:textAllCaps="false"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins_reguler"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/laku_filter"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_btn_filter"
                    android:text="Laku"
                    android:textAllCaps="false"
                    android:textColor="@color/btn_filter"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins_reguler"/>
            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvProperti"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"/>
            </androidx.core.widget.NestedScrollView>
        </LinearLayout>
    </ScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_property"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add"
        android:background="@drawable/bg_btn_blue"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>