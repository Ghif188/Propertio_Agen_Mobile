<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangePass"
    android:padding="25dp"
    android:layout_marginVertical="35dp"
    android:orientation="vertical"
    android:paddingBottom="40dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Kata Sandi"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_black"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="25dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kata Sandi Saat Ini"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_reguler"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="*"/>
            </LinearLayout>
            <EditText
                android:id="@+id/sandi_lama"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edit_text"
                android:textSize="15sp"
                android:paddingHorizontal="15dp"
                android:hint="Masukkan Nama Depan Anda"
                android:fontFamily="@font/poppins_reguler"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kata Sandi Baru"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_reguler"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="*"/>
            </LinearLayout>
            <EditText
                android:id="@+id/nama_depan"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edit_text"
                android:textSize="15sp"
                android:paddingHorizontal="15dp"
                android:hint="Masukkan Nama Depan Anda"
                android:fontFamily="@font/poppins_reguler"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Konfirmasi Kata Sandi"
                    android:layout_marginBottom="5dp"
                    android:fontFamily="@font/poppins_reguler"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/red"
                    android:text="*"/>
            </LinearLayout>
            <EditText
                android:id="@+id/konfir_sandi"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_edit_text"
                android:textSize="15sp"
                android:paddingHorizontal="15dp"
                android:hint="Masukkan Nama Depan Anda"
                android:fontFamily="@font/poppins_reguler"
                />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_blue"
            android:text="Ubah"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:fontFamily="@font/poppins_semibold"/>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_btn_grey"
            android:text="Batal"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppins_semibold"/>
    </LinearLayout>
</RelativeLayout>